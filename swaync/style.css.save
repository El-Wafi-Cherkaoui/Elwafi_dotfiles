* {
  all: unset;
  font-family: JetBrainsMono, sans-serif;
  font-size: 13px;
  color: #ffffff;
}

#main-window {
  background-color: #1e1e2e;
  border-radius: 10px;
  padding: 10px;
}

.notification {
  background-color: #313244;
  border-radius: 8px;
  padding: 10px;
  margin: 6px 4px;
}

.notification .app-name {
  font-weight: bold;
  color: #cba6f7;
}

.notification .summary {
  font-size: 14px;
  color: #f5c2e7;
}

.notification .body {
  font-size: 13px;
  color: #f2cdcd;
}
